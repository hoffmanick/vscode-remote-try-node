<!DOCTYPE html>
<html lang = "en">
<head>
  <meta charset = "UTF-8">
  <title> Submit to DB</title>
</head>

<body>

    <header>
      <h1>Specimen Metadata</h1>
    </header>

    <table>
      <tr><td>specID</td><td>species</td><td>strain</td><td>date</td><td>lat</td><td>lon</td><td>storage</td></tr>
      <% val.forEach((val)=> { %>
          <tr>
              <td>
                  <%= val.specID%>
              </td>
              <td>
                  <%= val.species %>
              </td>
              <td>
                <%= val.strain %>
            </td>
            <td>
              <%= val.date %>
          </td>
          <td>
            <%= val.lat%>
        </td>
        <td>
          <%= val.lon%>
      </td>
      <td>
        <%= val.storage%>
    </td>
            </tr>
          <hr />
      <% }) %>
        </table>
    <form action="/add" method="POST">
      <fieldset>
        <label>Species</label>
        <input type ="text" id = 'species' name="species" required>
        <br><br>
        <label>strain</label>
        <input type="text" id = "strain" name="strain" required>
        <br><br>
        <label>date</label>
        <input type="text" id = "date" name="date" required>
        <br><br>
        <label>lat</label>
        <input type="text" id = "lat" name="lat" required>
        <br><br>
        <label>long</label>
        <input type="text" id = "long" name="long" required>
        <br><br>
        <label>storage</label>
        <input type="text" id = "store" name="store" required>
        <br><br>
        <button type ="reset">Reset</button>
        <button type ="submit">Submit</button>
      </fieldset>
    </form>

    <form action="/view" method="POST">
      <fieldset>
        <h3>View specimens</h3>
        <button type ="submit">Submit</button>
        <br><br><br>
      </fieldset>
     </form>

    <form action="/update" method="POST">
        <fieldset>
          <h3>Update a record</h3>
          <label>specimen ID</label>
          <input type ="text" id = 'specID' name="specID" required>
          <br><br>
          <label>Storage</label>
          <input type="text" id = "store2" name="store2" required>
          <br><br>
          <button type ="reset">Reset</button>
          <button type ="submit">Submit</button>
        </fieldset>
       </form>
      <form action="/delete" method="POST">
        <fieldset>
          <h3>Delete a record</h3>
          <label>specID</label>
          <input type ="text" id = 'empID' name="id" required>
          <br><br>
          <button type ="reset">Reset</button>
          <button type ="submit">Submit</button>
          <br><br><br>
        </fieldset>
       </form>



       <footer>
        <hr>
        <h4>Please enter 'http://localhost:3000/close' to close the   database connection before closing this window</h4>
      </footer>
    </body>
  </html>